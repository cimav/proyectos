<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Usuarios</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.users %></td>
        <td><%= link_to 'Ver', department %></td>
        <td><%= link_to 'Editar', edit_department_path(department) %></td>
        <td><%= link_to 'Eliminar', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Departamento', new_department_path %>
