<p id="notice"><%= notice %></p>

<h1>Project Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Project type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_statuses.each do |project_status| %>
      <tr>
        <td><%= project_status.name %></td>
        <td><%= project_status.position %></td>
        <td><%= project_status.project_type %></td>
        <td><%= link_to 'Show', project_status %></td>
        <td><%= link_to 'Edit', edit_project_status_path(project_status) %></td>
        <td><%= link_to 'Destroy', project_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

