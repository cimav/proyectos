<p id="notice"><%= notice %></p>

<h1>Tamaños de compañías</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_sizes.each do |company_size| %>
      <tr>
        <td><%= company_size.name %></td>
        <td><%= company_size.description %></td>
        <td><%= link_to 'Mostrar', company_size %></td>
        <td><%= link_to 'Editar', edit_company_size_path(company_size) %></td>
        <td><%= link_to 'Eliminar', company_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo tamaño de compañía', new_company_size_path %>
