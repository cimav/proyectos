<nav class="config-breadcrumb z-depth-0">
    <div class="nav-wrapper">
      <div class="col s12">
        <a href="/configuracion" class="breadcrumb">Configuración</a>
        <a href="/configuracion/company_sizes" class="breadcrumb">Tamaño Empresa</a>
      </div>
    </div>
</nav>

<table class="highlight bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_sizes.each do |company_size| %>
      <tr>
        <td><%= company_size.name %></td>
        <td><%= company_size.description %></td>
        <td><%= link_to 'Editar', edit_company_size_path(company_size) %></td>
        <td><%= link_to 'Eliminar', company_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="fixed-action-btn">
  <a class="btn-floating btn-large waves-effect waves-light red" href="<%= new_company_size_path %>"><i class="material-icons">add</i></a>
</div>

<script>
Materialize.toast('<%= notice %>', 3000)
</script>
