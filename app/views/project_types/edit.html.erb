<nav class="config-breadcrumb z-depth-0">
    <div class="nav-wrapper">
      <div class="col s12">
        <a href="/configuracion" class="breadcrumb">Configuraci√≥n</a>
        <a href="/configuracion/proyectos" class="breadcrumb">Tipos de proyectos</a>
      </div>
    </div>
</nav>

<div class="row">
  <div class="col s3 project-type-sidenav-col">
    <div class="card project-type-sidenav">
      <div class="collection">
        <% @project_types.each do |project_type| %>
          <%
            if project_type.id.to_i == @params_id.to_i
              col_class = 'active'
            else
              col_class = ''
            end
          %>
          <a href="<%=  edit_project_type_path(project_type) %>" class="collection-item <%= col_class %>"><%= project_type.name %></a>
        <% end %>
      </div>   
    </div>
  </div>
  <div class="col s9">
    <h2><%= @project_type.name %></h2>
    <div class="row">
      <div class="col s12">
        <ul class="tabs">
          <li class="tab col s3"><a class="active" href="#detalles">Detalles</a></li>
          <li class="tab col s3"><a href="#estados">Estados</a></li>
          <li class="tab col s3"><a href="#documentos">Documentos</a></li>
        </ul>
      </div>
      <div id="detalles" class="col s12"><%= render 'form', project_type: @project_type %></div>
      <div id="estados" class="col s12"><%= render 'statuses', project_type: @project_type %></div>
      <div id="documentos" class="col s12">Test 3</div>
    </div>
  </div>
</div>




<br>

<div class="fixed-action-btn">
  <a class="btn-floating btn-large waves-effect waves-light red" href="<%= new_project_type_path %>"><i class="material-icons">add</i></a>
</div>
