<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12">

    <a class='dropdown-button btn white black-text btn-flat' id='project-dropdown-title' href='#' data-activates='dropdown1'><%= @projects.count %> proyectos activos <i class="material-icons right black-text">arrow_drop_down</i></a>

    <ul id='dropdown1' class='dropdown-content'>
      <li><a href="#!">Del departamento</a></li>
      <li><a href="#!">Donde soy responsable</a></li>
      <li class="divider"></li>
      <li><a href="#!"><i class="material-icons">view_module</i>Ver en tarjetas</a></li>
    </ul>

    <%= link_to 'Crear Nuevo Proyecto', new_project_path, class: 'waves-effect waves-light btn right blue' %>
  </div>
</div>

<table id="project-list" class="responsive-table bordered">
  <thead>
    <tr>
      <th>Proyecto</th>
      <th>Entrega</th>
      <th>Responsable</th>
      <th>Presupuesto</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= link_to project.internal_name, project %>
          <div class="extra"><%= project.client.short_name %></div>
        </td>
        <td class="no-wrap">
          20 de agosto
          <div class="extra">En 2 d√≠as</div>
        </td>
        <td class="no-wrap project-manager">
          <img src="<%= project.manager.picture %>" class="circle responsive-img left" id="user-top-image">
          <%= project.manager.name %>
          <div class="extra">
            <%= project.department.name %>
          </div>
        </td>
        <td class="no-wrap project-budget">

          <div class="c100 p33 xsmall c-green">
            <span>33%</span>
            <div class="slice">
              <div class="bar"></div>
              <div class="fill"></div>
            </div>
          </div>
          $5,600,000.00
          <div class="extra">Tope de gasto: $1,600,000.00</div>
        </td>
        <td class="no-wrap">En Proceso</td>
      </tr>
    <% end %>
  </tbody>
</table>
