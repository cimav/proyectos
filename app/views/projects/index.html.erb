<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12">

    <a class='dropdown-button btn white black-text btn-flat' id='project-dropdown-title' href='#' data-activates='dropdown1'><%= @projects.count %> proyectos activos <i class="material-icons right black-text">arrow_drop_down</i></a>

    <ul id='dropdown1' class='dropdown-content'>
      <li><a href="#!">Proyectos activos</a></li>
    </ul>

    <%= link_to 'Crear Nuevo Proyecto', new_project_path, class: 'waves-effect waves-light btn right blue' %>
  </div>
</div>

<table id="project-list" class="responsive-table bordered">
  <thead>
    <tr>
      <th>Proyecto</th>
      <th>Fecha Termino</th>
      <th>Responsable</th>
      <th>Presupuesto</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= link_to project.internal_name, project %>
          <div class="extra"><%= project.client.short_name %></div>
        </td>
        <td class="no-wrap">
          <%= project.end_schedule.end_date.strftime "%B %e, %Y" rescue '--' %>
          <div class="extra"><%= future_date(project.end_schedule.end_date) rescue '--' %></div>
        </td>
        <td class="no-wrap project-manager">
          <img src="<%= project.manager.picture %>" class="left circle">
          <%= project.manager.full_name %>
          <div class="extra">
            <%= project.department.name %>
          </div>
        </td>
        <td class="no-wrap project-budget">
          <% if project.budget == 0 
               budget_percentage = 100
             else
                budget_percentage = (project.budget_available * 100 / project.budget).round 
             end
          %>
          <div class="c100 p<%= budget_percentage %> xsmall c-green">
            <span><%= budget_percentage %>%</span>
            <div class="slice">
              <div class="bar"></div>
              <div class="fill"></div>
            </div>
          </div>
          <%= number_to_currency(project.budget) %>
          <div class="extra">Disponible: <%= number_to_currency(project.budget_available) %></div>
        </td>
        <td class="no-wrap"><%= project.project_status.name rescue '--' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
